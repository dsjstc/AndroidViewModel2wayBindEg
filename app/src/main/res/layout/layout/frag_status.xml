<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/status">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Event Information"
                android:id="@+id/textView"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowJackpot">

                <TextView
                    android:text="Jackpot: "
                    android:id="@+id/textView11"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="$0"
                    android:id="@+id/textView12"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowEvent">

                <TextView
                    android:text="Event: "
                    android:id="@+id/textView14"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:id="@+id/textView15"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowSellers">

                <TextView
                    android:text="Sellers: "
                    android:id="@+id/textView25"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:text="Your Information"
                android:id="@+id/textView13"
                android:textStyle="bold"
                android:gravity="bottom|left"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rowYourSales">

                <TextView
                    android:text="Yours: "
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="$0"
                    android:id="@+id/textView10"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow2">

                <TextView
                    android:text="Last sync: "
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0:00pm"
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow">

                <TextView
                    android:text="Client: "
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0"
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow5">

                <TextView
                    android:text="Userid: "
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="nobody"
                    android:id="@+id/textView16"
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="Event Log"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:gravity="bottom|left"/>

        <ListView
            android:id="@+id/listStatus"
            android:layout_column="0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/simple_list_item_1"
            />

    </LinearLayout>
</layout>
